<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:padding="20dp">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="City"
            android:id="@+id/txtCity"
            android:textSize="40sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="50dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              app:layout_constraintTop_toBottomOf="@id/txtCity"
              android:text="Temperature"
              android:textSize="40sp"
              android:id="@+id/txtTemperature"
              android:layout_marginTop="20dp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Summary"
              android:id="@+id/txtSummary"
              android:textSize="30sp"
              android:layout_marginTop="20dp"
              app:layout_constraintTop_toBottomOf="@id/txtTemperature"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"/>
    <ImageView android:layout_width="70dp" android:layout_height="70dp"
               android:src="@drawable/tornado"
               android:id="@+id/imgSummary"
               app:layout_constraintTop_toBottomOf="@id/txtSummary"
               app:layout_constraintLeft_toLeftOf="parent"
               android:layout_marginTop="20dp"
               app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>